{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "mkdir -p build && cd build && cmake .. && make && cp -r ../assets . && ./FuncDoodle",
            "problemMatcher": []
        },
        { 
            "label": "clean",
            "type": "shell",
            "command": "rm -rf build;./clean.sh",
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./build/FuncDoodle",
            "problemMatcher": []
        }
    ]
}